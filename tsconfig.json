{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["dom", "es5", "scripthost", "es2015", "es2021"],
    "strict": true
  },
  "include": ["**/*.ts"]
}
